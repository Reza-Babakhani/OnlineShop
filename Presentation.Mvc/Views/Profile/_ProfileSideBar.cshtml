@model Application.ViewModels.Profile.ProfileSideBarViewModel
<!--SideBar------------------------->
<div class="col-lg-3 col-md-4 col-xs-12">
    <div class="sidebar-wrapper">
        <div class="box-sidebar">
            <div class="profile-box">
                <div class="profile-box-avator">
                    <img src="~/assets/images/svg/user-profile.svg">
                </div>

                <div class="profile-box-content">
                    <span class="profile-box-nameuser">
                        @if (string.IsNullOrEmpty(Model.FullName))
                        {
                            @Model.Email
                        }
                        else
                        {
                            @Model.FullName
                        }
                    </span>

                    @if (string.IsNullOrEmpty(Model.MobileNumber))
                    {
                        <span class="profile-box-phone">
                            شماره موبایل ثبت نشده
                        </span>
                    }
                    else
                    {
                        <p style="direction:ltr;text-align:right;">
                            <span class="profile-box-phone">
                                @Model.MobileNumber.Remove(5, 4).Insert(5, "****")
                            </span>
                        </p>


                    }

                </div>

                <a href="#" class="profile-box-row-arrow">
                    <div class="profile-box-title">کیف پول</div>
                    <div class="profile-box-price">
                        <div class="wallet-amount">0</div>
                        <div class="profile-box-currency">تومان</div>
                        <i class="fa fa-angle-left"></i>
                    </div>
                    <p class="profile-box-wallet-link">افزایش موجودی</p>
                </a>

                <a href="#" class="profile-box-row-arrow" style="border:none;">
                    <div class="profile-box-title">دیجی کلاب</div>
                    <div class="profile-box-price">
                        <div class="wallet-amount">0</div>
                        <div class="profile-box-currency">امتیاز</div>
                        <i class="fa fa-angle-left"></i>
                    </div>
                </a>

                <div class="profile-box-tabs">
                    <a asp-action="ChangePassword" class="profile-box-tab"><span class="mdi mdi-lock"></span>تغییر رمز</a>
                    <a asp-action="LogOut" asp-controller="Account" class="profile-box-tab-sign-out"><span class="mdi mdi-power"></span>خروج از حساب</a>
                </div>
            </div>
        </div>

        <div class="box-sidebar">
            <div class="profile-box">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="~/@Model.ImagePath" class="profile-box-img-banner">

                }
            </div>
        </div>

        <div class="box-sidebar">
            <span class="box-header-sidebar">حساب کاربری شما</span>
            <ul class="profile-menu-items">
                <li><a href="profile.html" class="profile-menu-url active-profile"><span class="mdi mdi-account-outline"></span>پروفایل</a></li>
                <li><a href="profile-order.html" class="profile-menu-url"><span class="fa fa-shopping-basket"></span>همه سفارش ها</a></li>
                <li><a href="profile-order-return.html" class="profile-menu-url"><span class="fa fa-file-text-o"></span>در خواست مرجوعی</a></li>
                <li><a href="profile-favorites.html" class="profile-menu-url"><span class="fa fa-star-o"></span>لیست علاقه مندی ها</a></li>
                <li><a href="profile-comments.html" class="profile-menu-url"><span class="fa fa-file-text-o"></span>نقد و نظرات</a></li>
                <li><a href="profile-addresses.html" class="profile-menu-url"><span class="mdi mdi-map"></span>آدرس ها</a></li>
                <li><a href="#" class="profile-menu-url"><span class="fa fa-clock-o"></span>بازدید های اخیر</a></li>
                <li><a href="profile-personal-info.html" class="profile-menu-url"><span class="mdi mdi-account-outline"></span>اطلاعات شخصی</a></li>
            </ul>
        </div>

    </div>
</div>
<!--End SideBar-->