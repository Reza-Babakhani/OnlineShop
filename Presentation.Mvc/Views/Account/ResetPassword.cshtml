@model Application.ViewModels.Account.ResetPasswordViewModel
@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "تغییر رمزعبور";
}

<div class="col-lg-4 col-md-6 col-xs-12 mx-auto">
    <div class="account-box">
        <span class="account-head-line">یاد آوری کلمه عبور</span>
        <div class="content-account" style="direction:ltr;text-align:right;">

            <form asp-action="ResetPassword" asp-controller="Account" method="post">

                <input type="hidden" asp-for="UserName" />
                <input type="hidden" asp-for="Token" />

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <div class="input-group ">
                        <input class="form-control" asp-for="Password" aria-describedby="emailHelp" placeholder=" رمزعبور خود را وارد کنید">

                        <div class="input-group-append">
                            <div class="input-group-text"><i class="fa fa-lock"></i></div>
                        </div>
                    </div>
                    
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <div class="input-group ">
                        <input class="form-control" asp-for="ConfirmPassword" aria-describedby="emailHelp" placeholder=" تکرار رمزعبور را وارد کنید">

                        <div class="input-group-append">
                            <div class="input-group-text"><i class="fa fa-lock"></i></div>
                        </div>
                    </div>
                   
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="parent-btn">
                    <button type="submit" class="dk-btn dk-btn-info">
                        تغییر رمزعبور
                        <i class="mdi mdi-lock sign-in"></i>
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
